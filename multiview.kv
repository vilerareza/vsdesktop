#: import livegridlayout livegridlayout

<Multiview>:
    #liveGrid : live_grid_layout
    selectionBox : selection_box
    selectionScroll : selection_scroll
    selectionNextButton : selection_next_button
    selectionBackButton : selection_back_button
    orientation : 'vertical'
    manager: app.manager

    #LiveGridLayout:     # Main layout for lives
    #    size_hint : (1,1)
    #    id : live_grid_layout
    #    rows : 1
    #    cols : 1
    #    spacing : 5

    FloatLayout:
        size_hint : (1, None)
        height : dp(45)
        #canvas.before:
        #    Color:
        #        rgb : (0.9,0.5,0.5)
        #    Rectangle :
        #        size : self.size
        #        pos : self.pos
        ScrollView:
            id : selection_scroll
            do_scroll_y : False 
            do_scroll_x : True
            size_hint : None, None 
            width : selection_box.width if (len(selection_box.children) <= 4) else dp(740)
            height : dp(45)
            pos_hint : {'center_x':0.5}
            bar_width : 3
            bar_pos_x : 'top'
            bar_color : (0.7,0.7,0.7,0.7)
            bar_inactive_color : (0.7,0.7,0.7,0.4)
            bar_margin : 0
            #canvas.before:
            #    Color:
            #        rgb : (0,0,0.8)
            #    Rectangle:
            #        size : self.size
            #        pos : self.pos

            GridLayout:   # Grid layout as container for deviceIcons
                id : selection_box
                rows : 1
                size_hint : (None, 1)
                width : self.minimum_width
                spacing : 5
                padding : [0, 3, 0, 0]

        ButtonImage: # device selection next ButtonBehavior
            id : selection_next_button
            source : 'images/selectionnext.png'
            size_hint : None, None
            size :  dp(20), dp(20)
            center_y : selection_scroll.center_y
            x : selection_scroll.right + dp(7)
            disabled : False if (len(root.deviceIcons) > root.selectionInterval and selection_scroll.scroll_x < 1 ) else True
            opacity : 0 if self.disabled == True else 1
            on_press : root.selection_next_press(self)
        
        ButtonImage: # device selection back ButtonBehavior
            id : selection_back_button
            source : 'images/selectionback.png'
            size_hint : None, None
            size :  dp(20), dp(20)
            center_y : selection_scroll.center_y
            right : selection_scroll.x - dp(7)
            disabled : False if (len(root.deviceIcons) > root.selectionInterval and selection_scroll.scroll_x > 0) else True
            opacity : 0 if self.disabled == True else 1
            on_press : root.selection_back_press(self)

        
<ButtonImage@ButtonBehavior+Image>