<CalendarBox>:
    calendarBox: calendar_box
    dayGrid: day_grid
    calendarGrid: calendar_grid
    monthText: month_text
    yearText: year_text
    activityDate: activity_date
    activityBox: activity_box
    chooseMonth: choose_month
    id: calendar_box
    orientation: 'horizontal'
    size_hint: 1, 1
    spacing: 25
    GridLayout:
        size_hint: 0.6, 1
        rows: 3
        BoxLayout:
            orientation:'horizontal'
            size_hint: 1, 0.1
            TextInput:
                id: month_text
                size_hint: (0.2, 1)
                font_size: 28
                # padding_y: 20, 1
                foreground_color: rgba('#252618')
                background_color: 0.5, 0.5, 0.5
                background_normal: 'attendance/images/background.png'
                background_active: 'attendance/images/background.png'
                readonly: True
            TextInput:
                id: year_text
                size_hint: (0.2, 1)
                font_size: 28
                # padding_y: 20, 1
                foreground_color: rgba('#252618')
                background_color: 0.5, 0.5, 0.5
                background_normal: 'attendance/images/background.png'
                background_active: 'attendance/images/background.png'
                readonly: True

            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.6, 1)

                FloatLayout:
                    RoundedButton:
                        id: choose_year
                        text: 'Choose Year'
                        size_hint: (None, None)
                        size: 110, 30
                        pos_hint: {'right': 0.98,'center_y': 0.5}

                    RoundedButton:
                        id: choose_month
                        text: 'Choose Month'
                        size_hint: (None, None)
                        size: 110, 30
                        pos_hint: {'center_y': 0.5}
                        x : choose_year.x - 120
                        on_release: root.choose_month(self)

        GridLayout:
            id: day_grid
            size_hint: 1, 0.1
            cols: 7

        GridLayout:
            id: calendar_grid
            size_hint: 1, 0.8
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.4, 1
        canvas:
            Color:
                rgb: 1, 1, 0
            Rectangle:
                pos: self.pos
                size: self.size

        TextInput:
            text: "Today's Activity"
            size_hint: (1, 0.1)
            font_size: 24
            padding_y: 10, 1
            foreground_color: rgba('#252618')
            background_color: 0.5, 0.5, 0.5
            background_normal: 'attendance/images/background.png'
            background_active: 'attendance/images/background.png'
            readonly: True
        TextInput:
            id: activity_date
            text: ""
            size_hint: (1, 0.1)
            font_size: 18
            padding_y: 1, 10
            foreground_color: rgba('#252618')
            background_color: 0.5, 0.5, 0.5
            background_normal: 'attendance/images/background.png'
            background_active: 'attendance/images/background.png'
            readonly: True
        BoxLayout:
            id: activity_box
            orientation:'vertical'
            size_hint: 1, 0.8