<AddPerson>:
    nameBox: name_box
    positionBox: position_box
    profilePictureButton: profile_picture_button
    cols: 2
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5, 1
        TextInput:
            text: "Add New Person"
            size_hint: (0.8, 0.1)
            font_size: 30
            padding_y: 30, 1
            foreground_color: rgba('#252618')
            background_color: 0.5, 0.5, 0.5
            background_normal: 'attendance/images/background.png'
            background_active: 'attendance/images/background.png'
            readonly: True
            pos_hint : {'center_y': 0.5, 'center_x': 0.5}
        
        TextInput:
            text: "Name"
            size_hint: (0.8, None)
            height: 50
            font_size: 24
            foreground_color: rgba('#252618')
            background_color: 0.5, 0.5, 0.5
            background_normal: 'attendance/images/background.png'
            background_active: 'attendance/images/background.png'
            readonly: True
            pos_hint : {'center_y': 0.5, 'center_x': 0.5}
        
        TextInput:
            id: name_box
            hint_text: "Name"
            size_hint: (0.8, None)
            height: 50
            font_size: 20
            pos_hint : {'center_y': 0.5, 'center_x': 0.5}
            padding_y: 10, 1
        
        TextInput:
            text: "Position"
            size_hint: (0.8, None)
            height: 70
            font_size: 24
            foreground_color: rgba('#252618')
            background_color: 0.5, 0.5, 0.5
            background_normal: 'attendance/images/background.png'
            background_active: 'attendance/images/background.png'
            readonly: True
            pos_hint : {'center_y': 0.5, 'center_x': 0.5}
            padding_y: 30, 1
        
        TextInput:
            id: position_box
            hint_text: "Position"
            size_hint: (0.8, None)
            height: 50
            font_size: 20
            pos_hint : {'center_y': 0.5, 'center_x': 0.5}
            padding_y: 10, 1
        
        TextInput:
            text: "Profile Picture"
            size_hint: (0.8, None)
            height: 70
            font_size: 24
            foreground_color: rgba('#252618')
            background_color: 0.5, 0.5, 0.5
            background_normal: 'attendance/images/background.png'
            background_active: 'attendance/images/background.png'
            readonly: True
            pos_hint : {'center_y': 0.5, 'center_x': 0.5}
            padding_y: 30, 1
        
        Button:
            id: profile_picture_button
            text: 'Add Profile Picture'
            size_hint: (0.8, None)
            height: 50
            pos_hint : {'center_y': 0.5, 'center_x': 0.5}
            on_press: root.get_profile_picture(self)
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.1)

        FloatLayout:
            size_hint: (1, 0.1)
            Button:
                text: 'Save Data'
                size_hint: (0.3, None)
                height: 50
                pos_hint : {'center_y': 0.5, 'center_x': 0.5}
                disabled: True if name_box.text == "" or position_box.text == "" or profile_picture_button.text == 'Add Profile Picture' else False
                on_press: root.add_person(self)
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5, 1


