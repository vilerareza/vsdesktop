<LiveActionBar>:
    rows : 1
    canvas.before :
        Color:
            rgb : (0, 0, 0)
        Rectangle:
            size : self.size
            pos : self.pos
    
    BoxLayout :
        id : capture_image_box
        ImageButton:
            id : capture_image_button
            source : 'images/capturenormal.png'
            size_hint : (1, 0.8)
            pos_hint : {'center_x' : 0.5, 'center_y' : 0.5}
            on_press : root.button_press_callback(self)
            on_release : root.button_release_callback(self)
    
    BoxLayout:
        id : stop_stream_box
        ImageButton:
            id : stop_stream_icon
            source : 'images/stopstream.png'
            mipmap : True
            size_hint : (1, 0.8)
            pos_hint : {'center_x' : 0.5, 'center_y' : 0.5}

    BoxLayout:
        id : minimize_actionbar_box
        ImageButton:
            id : minimize_actionbar_icon
            source : 'images/minimizeactionbar.png'
            size_hint : (1, 0.5)
            pos_hint : {'center_x' : 0.5, 'center_y' : 0.5}

<ImageButton@ButtonBehavior+Image>: