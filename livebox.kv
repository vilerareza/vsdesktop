#: import livestream livestream
#: import liveactionbar liveactionbar

<LiveBox>:
    size_hint: None, None
    liveStream : live_stream
    liveActionBar : live_action_bar

    LiveStream:
        id : live_stream
        pos_hint : {'center_x':0.5, 'center_y': 0.5}
        size_hint :(None, None) 
        size : (640, 360) 
        allow_stretch : True

    LiveActionBar:
        id : live_action_bar
        opacity : 0
        size_hint : None, None
        width : live_stream.width * 0.7
        height : live_stream.height * 0.1
        pos_hint: {'center_x' : 0.5}
        y : live_stream.y